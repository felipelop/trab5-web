<h1>Listing pokedexes</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Pokemon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokedexes.each do |pokedex| %>
      <tr>
        <td><%= pokedex.numero %></td>
        <td><%= pokedex.pokemon %></td>
        <td><%= link_to 'Show', pokedex %></td>
	<% if current_user.role == "admin" %>
	        <td><%= link_to 'Edit', edit_pokedex_path(pokedex) %></td>
       		<td><%= link_to 'Destroy', pokedex, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "admin" %>
	<%= link_to 'New Pokedex', new_pokedex_path %>
<% end %>
