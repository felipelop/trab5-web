<h1>Listing tipos</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr>
        <td><%= tipo.id %></td>
        <td><%= tipo.nome %></td>
        <td><%= link_to 'Show', tipo %></td>
	<% if current_user.role == "admin" %>
        	<td><%= link_to 'Edit', edit_tipo_path(tipo) %></td>
        	<td><%= link_to 'Destroy', tipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "admin" %>
	<%= link_to 'New Tipo', new_tipo_path %>
<% end %>
